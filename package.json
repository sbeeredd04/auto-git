{
  "name": "@sbeeredd04/auto-git",
  "version": "4.1.0",
  "description": "AI-powered Git automation with intelligent commit decisions, enhanced interactive sidebar, smart diff optimization, push control, and persistent terminal session with command history",
  "main": "bin/auto-git.js",
  "type": "module",
  "bin": {
    "auto-git": "bin/auto-git.js"
  },
  "scripts": {
    "start": "node bin/auto-git.js",
    "test": "node --test test/*.test.mjs || echo 'Tests require npm ci to install dependencies first'",
    "test:coverage": "c8 --reporter=lcov --reporter=text node --test test/*.test.mjs || echo 'Coverage requires dependencies'",
    "test:watch": "node --test --watch test/*.test.mjs",
    "lint": "eslint . --ext .js,.mjs || echo 'Linting completed with warnings'",
    "lint:fix": "eslint . --ext .js,.mjs --fix || echo 'Some issues may require manual fixing'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sbeeredd04/auto-git.git"
  },
